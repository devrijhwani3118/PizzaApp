<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#490DB4"
    android:backgroundTint="#7E7A6AD5"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/orderHereButton"
        android:layout_width="246dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:text="@string/order_here"
        app:layout_constraintBottom_toTopOf="@+id/currentOrdersButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topping_button" />

    <Button
        android:id="@+id/storeOrdersButton"
        android:layout_width="246dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:text="@string/store_orders"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentOrdersButton" />

    <Button
        android:id="@+id/currentOrdersButton"
        android:layout_width="246dp"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        android:text="@string/current_orders"
        app:layout_constraintBottom_toTopOf="@+id/storeOrdersButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderHereButton" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="348dp"
        android:layout_height="423dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/topping_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/pizza_chef" />

    <Button
        android:id="@+id/topping_button"
        android:layout_width="246dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:text="Toppings Menu"
        app:layout_constraintBottom_toTopOf="@+id/orderHereButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

</androidx.constraintlayout.widget.ConstraintLayout>